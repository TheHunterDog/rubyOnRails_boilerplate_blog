<div class="comment">
    <p class="author">
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>

    <p class="body">
    <strong>Comment:</strong>
    <%= comment.body %>
    </p>

    <p class="options">
    <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    </p>
</div>